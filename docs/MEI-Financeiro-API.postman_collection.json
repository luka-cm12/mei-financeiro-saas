		{
			"name": "3. Login",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Usar o email gerado no registro",
							"var testEmail = pm.environment.get('test_email') || 'joao@email.com';",
							"",
							"// Atualizar o body da request",
							"var requestBody = JSON.parse(pm.request.body.raw);",
							"requestBody.email = testEmail;",
							"pm.request.body.raw = JSON.stringify(requestBody);"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.data && jsonData.data.token) {",
							"        pm.environment.set('token', jsonData.data.token);",
							"        console.log('Token atualizado: ' + jsonData.data.token);",
							"    }",
							"    if (jsonData.data && jsonData.data.user && jsonData.data.user.id) {",
							"        pm.environment.set('user_id', jsonData.data.user.id);",
							"        console.log('User ID: ' + jsonData.data.user.id);",
							"    }",
							"    pm.test('Login realizado com sucesso', function () {",
							"        pm.expect(jsonData.success).to.be.true;",
							"        pm.expect(jsonData.data.token).to.not.be.empty;",
							"    });",
							"} else {",
							"    pm.test('Falha no login', function () {",
							"        pm.expect.fail('Status code: ' + pm.response.code);",
							"    });",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
