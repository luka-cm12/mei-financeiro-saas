		{
			"name": "2. Registrar Usuário",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Gerar email único e salvar para usar no login",
							"var uniqueEmail = 'joao' + Math.floor(Math.random() * 10000) + '@email.com';",
							"pm.environment.set('test_email', uniqueEmail);",
							"",
							"// Atualizar o body da request",
							"var requestBody = JSON.parse(pm.request.body.raw);",
							"requestBody.email = uniqueEmail;",
							"pm.request.body.raw = JSON.stringify(requestBody);"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.data && jsonData.data.token) {",
							"        pm.environment.set('token', jsonData.data.token);",
							"        console.log('Token salvo: ' + jsonData.data.token);",
							"    }",
							"    if (jsonData.data && jsonData.data.user && jsonData.data.user.id) {",
							"        pm.environment.set('user_id', jsonData.data.user.id);",
							"        console.log('User ID salvo: ' + jsonData.data.user.id);",
							"    }",
							"    pm.test('Registro realizado com sucesso', function () {",
							"        pm.expect(jsonData.success).to.be.true;",
							"    });",
							"} else {",
							"    pm.test('Falha no registro', function () {",
							"        pm.expect.fail('Status code: ' + pm.response.code);",
							"    });",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@email.com\",\n  \"password\": \"123456\",\n  \"confirm_password\": \"123456\",\n  \"phone\": \"11999999999\",\n  \"document\": \"11144477735\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/register.php",
					"host": ["{{base_url}}"],
					"path": ["auth", "register.php"]
				}
			}
