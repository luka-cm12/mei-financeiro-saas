{
    "name": "mei-financeiro/nfce-system",
    "description": "Sistema completo de NFCe para MEI Financeiro SaaS",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "tecnickcom/tcpdf": "^6.6",
        "phpmailer/phpmailer": "^6.8",
        "endroid/qr-code": "^4.8",
        "phpseclib/phpseclib": "^3.0",
        "robrichards/xmlseclibs": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "MEIFinanceiro\\NFCe\\": "api/",
            "MEIFinanceiro\\Services\\": "api/services/",
            "MEIFinanceiro\\Controllers\\": "api/controllers/",
            "MEIFinanceiro\\Models\\": "api/models/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MEIFinanceiro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "analyze": "phpstan analyse",
        "post-install-cmd": [
            "@php -r \"copy('vendor/tecnickcom/tcpdf/fonts', 'storage/fonts');\"",
            "@php -r \"if (!is_dir('storage/reports')) mkdir('storage/reports', 0755, true);\"",
            "@php -r \"if (!is_dir('storage/xml')) mkdir('storage/xml', 0755, true);\"",
            "@php -r \"if (!is_dir('storage/pdf')) mkdir('storage/pdf', 0755, true);\"",
            "@php -r \"if (!is_dir('storage/certificates')) mkdir('storage/certificates', 0755, true);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}